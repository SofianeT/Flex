{% extends 'base.html.twig' %}

{% block body %}
    <h1> Inscription sur le site</h1>

    {{ form_start(form) }}
    
      {{form_row(form.username, {'label':'Nom d\'utilisateur  :  ', 'attr': {'placeholder':"   Entrer 'Nom d\'utilisateur' "}})}}
      <br/>
     {{form_row(form.email,{'label':'Adresse mail  :  ', 'attr': {'placeholder':"    Entrer votre email "}})}}
      <br/>
       {{form_row(form.password, {'label':'Mot de passe  :  ', 'attr': {'placeholder':"     Entrer votre mot de passe "}})}}
      <br/> 
      {{form_row(form.confirm_password, {'label':'Confirmation du mot de passe  :  ', 'attr': {'placeholder':"       Confirmer votre mot de passe  "}})}}
    <br/>
     <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}